@model WCS.PageModels.PageModel
@{
    ViewBag.Title = "Index";
}
<car-result></car-result>
<h2>Index </h2>
<a href='@Url.Action("IndexAngular", "Home")'>Angular Version</a>
<div class="row">
    <div class="col-md-6">
        <h3>Search Results</h3>
        @if (Model != null)
        {   
            foreach (var car in Model.Results)
            {
                <div class="row searchresults-block">
                    <div class="col-md-12">
                        <div class="img-container">
                            <img src="@Url.Content(car.Thumbnail)" alt="@car.Title" class="img" />
                            <div class="overlay"></div>                          
                            <div class="button" onclick="location.href='@Url.Action("Add", "Home", new { id = @car.Id })'" >
                                <span>Save</span>
                            </div>
                        </div>
                        <div>@car.Title</div>
                        <div>@car.Price</div>
                    </div>
                </div>
            }

        }
    
    </div>
    <div class="col-md-6">

        <h3>Saved Cars</h3>
        @if (Model != null)
        {
            foreach (var car in Model.SavedCars)
            {
                <div class="row searchresults-block">
                    <div class="col-md-12">
                        <div class="img-container">
                            <img src="@Url.Content(car.Thumbnail)" alt="@car.Title" class="img" />                            
                            <div class="overlay"></div> 
                            <div class="button" value="Remove" onclick="location.href='@Url.Action("Remove", "Home",new { id = @car.Id})'">
                                <span>Remove</span>
                            </div>
                        </div>
                        <div>@car.Title</div>
                        <div>@car.Price</div>
                    </div>
                </div>
            }
        }    
    </div>
</div>


<br/>


